@model Product
@{
    ViewData["Title"] = "Show";
}

<h1>Show</h1>
@*<h2>@ViewBag.name</h2>*@

@if (Model != null)
{
    <h3>Product Id: @Model.Id</h3>
    <h3>Product Name: @Model.Name</h3>
    <h3>Product Price: @Model.Price</h3>
}

<div>
    <a href="/Products/Remove">Remove</a>
    <a href="/Products/Index">Index</a>
</div>

<div>
    <img src="/Products/ImageShow" />
</div>

